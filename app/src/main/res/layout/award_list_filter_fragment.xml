            <!-- Buttons -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="1dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="@dimen/activity_margin_horizontal"
                android:paddingEnd="@dimen/activity_margin_horizontal"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/txtClearFilters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/button_clear_filters"
                    style="@style/PseudoButtonStyle" />

                <TextView
                    android:id="@+id/txtOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/button_ok"
                    style="@style/PseudoButtonStyle" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
