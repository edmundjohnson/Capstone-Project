<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- These dimensions are for a phone in portrait mode. -->

    <!-- Default screen margins, per the Android Design guidelines. -->
    <!-- https://material.io/guidelines/layout/metrics-keylines.html#metrics-keylines-keylines-spacing -->
    <dimen name="first_keyline">16dp</dimen>
    <!-- <dimen name="second_keyline">72dp</dimen> -->

    <dimen name="activity_margin_vertical">16dp</dimen>
    <dimen name="activity_margin_horizontal">16dp</dimen>

    <!-- App Bar -->
    <dimen name="appbar_height">112dp</dimen>
    <!-- To overcome a bug in Android, we need to add extra padding on wider screens -->
    <dimen name="appbar_padding_horizontal">0dp</dimen>
    <dimen name="appbar_title_padding_vertical">64dp</dimen>
    <dimen name="text_size_appbar_title">20dp</dimen>

    <!-- List -->
    <dimen name="list_padding_vertical">4dp</dimen>
    <dimen name="list_padding_horizontal">4dp</dimen>
    <!-- list view -->
    <!-- list_item_padding_horizontal equals first_keyline minus list_padding_horizontal -->
    <dimen name="list_item_padding_horizontal">12dp</dimen>
    <!-- grid view -->
    <integer name="list_grid_column_count">3</integer>

    <!-- Detail -->
    <dimen name="detail_scroll_up_distance">30dp</dimen>
    <item name="detail_body_line_spacing_multiplier" format="float" type="fraction">1.25</item>
    <bool name="detail_is_card">false</bool>
    <dimen name="detail_card_margin_top">@dimen/detail_image_height</dimen>
    <dimen name="detail_card_max_width">10000dp</dimen> <!-- force match_parent -->

    <!-- <dimen name="detail_image_height">304dp</dimen> -->
    <dimen name="detail_image_height">424dp</dimen>
    <dimen name="detail_padding_horizontal">@dimen/first_keyline</dimen>
    <dimen name="detail_movie_info_elevation">0dp</dimen>
    <dimen name="detail_movie_info_padding_top">16dp</dimen>
    <dimen name="detail_movie_info_padding_bottom">16dp</dimen>
    <dimen name="detail_movie_info_title_padding_bottom">4dp</dimen>
    <dimen name="detail_award_info_padding_vertical">16dp</dimen>
    <dimen name="detail_review_padding_bottom">16dp</dimen>

    <!-- Widget dimensions: General -->
    <!-- This way of doing widget_margin assumes that min version is >=14 -->
    <dimen name="widget_margin">0dp</dimen>

    <!-- Widget dimensions: In Cinemas Now -->
    <dimen name="widget_default_width_in_cinemas">180dp</dimen>
    <dimen name="widget_default_height_in_cinemas">180dp</dimen>
    <dimen name="widget_min_resize_width_in_cinemas">@dimen/widget_default_width_in_cinemas</dimen>
    <dimen name="widget_min_resize_height_in_cinemas">120dp</dimen>

</resources>