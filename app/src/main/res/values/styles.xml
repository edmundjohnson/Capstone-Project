<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- We will be using the toolbar so no need to show action bar or title -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- palette -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <!-- App Bar theme -->
    <!-- Without this parent, the up arrow and menu dots become black -->
    <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- <item name="android:paddingStart">@dimen/appbar_padding_horizontal</item> -->
        <!-- <item name="android:paddingEnd">@dimen/appbar_padding_horizontal</item> -->
    </style>
    <!-- This style works around a bug which causes the app bar title to be too small in
         landscape mode, e.g. on a lollipop Xperia Z3 Compact -->
    <style name="AppBarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_appbar_title</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="PseudoButtonStyle">
        <!-- button defaults -->
        <item name="android:background">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">88dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <!-- customisation -->
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="LabelStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="FieldValueStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="FieldEditStyle">
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <!--
    <style name="RadioButton.Filter">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>
    -->

    <style name="SpinnerLabelStyle">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666</item>
    </style>

    <style name="SpinnerContainer">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- We have to set the Spinner background in a container,
         to retain the drop-down arrow image -->
    <style name="SpinnerContainer.Filter">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@color/green_50</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

</resources>
