    <!-- Have a smaller appbar in landscape, to leave more room for the content -->
    <dimen name="appbar_height">56dp</dimen>
    <!-- To overcome a bug in Android, we need to add extra padding on wider screens -->
    <dimen name="appbar_padding_horizontal">8dp</dimen>

</resources>