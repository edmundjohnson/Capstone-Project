<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <!-- Use the tablet margins for landscape -->
    <dimen name="first_keyline">24sp</dimen>
    <!-- <dimen name="second_keyline">80sp</dimen> -->

    <!-- App Bar -->
    <!-- Have a smaller appbar in landscape, to leave more room for the content -->
    <dimen name="appbar_height">@dimen/abc_action_bar_default_height_material</dimen>
    <!-- To overcome a bug in Android, we need to add extra padding on wider screens -->
    <dimen name="appbar_padding_horizontal">8dp</dimen>
    <dimen name="appbar_title_padding_vertical">12dp</dimen>

    <!-- List -->
    <!-- list_item_padding_horizontal equals first_keyline minus list_padding_horizontal -->
    <dimen name="list_item_padding_horizontal">20dp</dimen>

    <!-- Detail -->
    <!-- Give the movie info bar the standard app bar elevation -->
    <dimen name="detail_movie_info_elevation">@dimen/abc_action_bar_elevation_material</dimen>
    <!-- In landscape, allow space for toolbar -->
    <dimen name="detail_movie_info_padding_top">@dimen/abc_action_bar_default_height_material</dimen>
    <dimen name="detail_padding_horizontal">@dimen/first_keyline</dimen>

</resources>