<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Action Bar themes -->
    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:paddingStart">@dimen/actionbar_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/actionbar_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/actionbar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/actionbar_padding_horizontal</item>
        <item name="android:popupTheme">@style/AppBarPopupTheme</item>
        <item name="android:titleTextAppearance">@style/ActionBarTitle</item>
