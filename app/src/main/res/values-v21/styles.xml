<resources>

    <!-- App Bar themes -->
    <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:paddingStart">@dimen/appbar_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/appbar_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/appbar_padding_horizontal</item>
