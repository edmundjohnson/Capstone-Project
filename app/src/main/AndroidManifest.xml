<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.jumpingmouse.moviecompanion" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- Android v7 requires the android:authorities to be specified literally,
             i.e. NOT using a reference to a string/resource -->
        <provider
            android:authorities="@string/content_authority"
            android:name=".model.DataProvider"
            android:enabled="true"
            android:exported="false"
            android:syncable="true" />

        <!-- The main activity -->
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- The movie activity -->
        <activity android:name=".activity.MovieActivity"
            android:parentActivityName=".activity.MainActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.jumpingmouse.moviecompanion.activity.MainActivity" />
        </activity>

    </application>

</manifest>